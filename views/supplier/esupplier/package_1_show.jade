                option(value='administrative' selected) Administrative management
              - }else{
                option(value='administrative') Administrative management
              - }
        .col-md-2
          .form-group
            label SOS(Price)
            input.form-control.sos(type='text' value='#{package.service[i].SOS}' disabled='')
            i.form-group__bar
        .col-md-2
          .form-group
            label BASIC(Price)
            input.form-control.basic(type='text' value='#{package.service[i].BASIC}' disabled='')
            i.form-group__bar
        .col-md-2
          .form-group
            label GOLDEN(Price)
            input.form-control.golden(type='text' value='#{package.service[i].GOLDEN}' disabled='')
            i.form-group__bar
        .col-md-2
          .form-group
            label PLATINUM(Price)
            input.form-control.platinum(type='text'  value='#{package.service[i].PLATINUM}' disabled='')
            i.form-group__bar    
