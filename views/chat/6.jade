block chatStyle
  link(rel='stylesheet', href='/stylesheets/chat/6.css')
block chatContent
  .container
    #parent
      form#child(action='/chat/7' method='POST')
        p
          | What is your highest level of education?
        .form-row.ans-1
          .form-group.col-md-2.offset-md-1
            .option-wrapper.wrapper-1
              img(src='https://www.lemonade.com/assets/web_chat/owner-859db2e914a9962fb324d3df8931d46c921becb948bfe75bc770bd35a8c424ec.png', alt='')
              .icon-option-wrapper
                h6 High School
                i.on
          .form-group.col-md-2
            .option-wrapper.wrapper-2
              img(src='https://www.lemonade.com/assets/web_chat/owner-859db2e914a9962fb324d3df8931d46c921becb948bfe75bc770bd35a8c424ec.png', alt='')
              .icon-option-wrapper
                h6 Associate
                i
          .form-group.col-md-2
            .option-wrapper.wrapper-3
              img(src='https://www.lemonade.com/assets/web_chat/owner-859db2e914a9962fb324d3df8931d46c921becb948bfe75bc770bd35a8c424ec.png', alt='')
              .icon-option-wrapper
                h6 Bachelor
                i
          .from-group.col-md-2
            .option-wrapper.wrapper-4
              img(src='https://www.lemonade.com/assets/web_chat/owner-859db2e914a9962fb324d3df8931d46c921becb948bfe75bc770bd35a8c424ec.png', alt='')
              .icon-option-wrapper
                h6 Master
                i
          .form-group.col-md-2
            .option-wrapper.wrapper-5
              img(src='https://www.lemonade.com/assets/web_chat/owner-859db2e914a9962fb324d3df8931d46c921becb948bfe75bc770bd35a8c424ec.png', alt='')
              .icon-option-wrapper
                h6 PhD
                i
        input.education(type='text' value='', style='display:none', name='education', required)
        button.btn(disabled='') Next
block chatScript
  script.
    var education = '#{education}';
    if(education){
      $('.wrapper-'+education).addClass('on');
      $('.btn').removeAttr('disabled');
      $('.education').val(education);
    }

    for(var i = 1; i < 6; i++){
      $('.wrapper-'+i.toString()).on('click', function(){
        for(var j = 1; j < 6; j++){
          $('.wrapper-'+j.toString()).removeClass('on');
        }        
        $(this).addClass('on');
        $('.btn').removeAttr('disabled');
        for(var j = 1; j < 6 ; j++){
          if($('.wrapper-'+j.toString()).hasClass('on'))
            $('.education').val(j);
        }        
      })
    }
    
