extends ../../layout
block pageStyle
  link(rel='stylesheet', href='/stylesheets/customer/services/medical.css')
block pageContent
  a.back-btn(href='/services/medical') BACK
  section.section4
    .blank
    .inner
      .header
        h3
          | REFERENCIAS
          br
          | MEDICAS
        p INO SABES A QUE DOCTOR ACUDIR? / RECUREDA QUE TU COBERTURA DE LLANTAS VANGO CUENTA CON LA ASISTENCIA RECOMENDACIÓN DE CONSULTORIOS / TENEMOS ACUERDOS CON LOS MEJORES MÉDICOS / PROTEGEMOS LA SALUD DE NUESTROS USUARIOS
    .bottom
      a.main-button(href='#')
        ¡Obtén cobertura ya!

block pageScript
  script.
    $('.navbar').addClass('top');
    $('.navbar .btn-consult').hide();
    $('.navbar .btn-social').show();
    $( window ).scroll(function() {
      var scroll = $(window).scrollTop();
      if(scroll < 10){
        $('.navbar .btn-consult').hide();
        $('.navbar .btn-social').show();
      }else{
        $('.navbar .btn-consult').show();
        $('.navbar .btn-social').hide();

      }
    });

    $('.nav-services').addClass('active');
    $('.logo-large').attr('src', '/images/customer/services/logo_lg.png');
    $('.logo-medium').attr('src', '/images/customer/services/logo_md.png');
    $('.logo-small').attr('src', '/images/customer/services/logo_sm.png');

    $('#blogmenu').attr('href', 'https://referenciasmedicas.segurosvango.com');
