extends ../../layout
block pageStyle
  link(rel='stylesheet', href='/stylesheets/customer/services/medical.css')
block pageContent
  a.back-btn(href='/services/medical') BACK
  section.section2
    .blank
    .inner
      .header
        .header-back
          h3
            | DESCUENTOS
            br
            | MEDICOS
          .comment
            p ¡Enormes Ahorros! Tendrás acceso a los mayores descuentos en atención médica, farmacias, laboratorios, check ups, hospitales AAA, entre otros servicios médicos. Dentro y fuera de tu localidad.
    .bottom
      a.main-button(href='#')
        ¡Obtén cobertura ya!

block pageScript
  script.
    $('.navbar').addClass('top');
    $('.navbar .btn-consult').hide();
    $('.navbar .btn-social').show();
    $( window ).scroll(function() {
      var scroll = $(window).scrollTop();
      if(scroll < 10){
        $('.navbar .btn-consult').hide();
        $('.navbar .btn-social').show();
      }else{
        $('.navbar .btn-consult').show();
        $('.navbar .btn-social').hide();

      }
    });

    $('.nav-services').addClass('active');
    $('.logo-large').attr('src', '/images/customer/services/logo_lg.png');
    $('.logo-medium').attr('src', '/images/customer/services/logo_md.png');
    $('.logo-small').attr('src', '/images/customer/services/logo_sm.png');

    $('#blogmenu').attr('href', 'https://descuentosmedicos.segurosvango.com');
