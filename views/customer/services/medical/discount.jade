extends ../../layout
block pageStyle
  link(rel='stylesheet', href='/stylesheets/customer/services/medical.css')
block pageContent
  section.section2
    .blank
    .inner
      .header
        h3
          | DESCUENTOS
          br
          | MEDICOS
        p NO GASTES DE MÁS / CON TU ASISTENCIA “DESCUENTOS MÉDICOS” TENDRÁS REBAJAS EN DOCTORES Y MEDICINAS / NUESTRA PLATAFORMA VANGO CON INTELIGENCIA ARTIFICIAL ESTÁ CONECTADA A UNA RED INTEGRAL ACTIVA DE DESCUENTOS / CUIDAMOS TU DINERO
    .bottom
      a.main-button(href='#')
        ¡Obtén cobertura ya!

block pageScript
  script.
    $('.navbar').addClass('top');
    $('.navbar .btn-consult').hide();
    $('.navbar .btn-social').show();
    $( window ).scroll(function() {
      var scroll = $(window).scrollTop();
      if(scroll < 10){
        $('.navbar .btn-consult').hide();
        $('.navbar .btn-social').show();
      }else{
        $('.navbar .btn-consult').show();
        $('.navbar .btn-social').hide();

      }
    });

    $('.nav-services').addClass('active');
    $('.logo-large').attr('src', '/images/customer/services/logo_lg.png');
    $('.logo-medium').attr('src', '/images/customer/services/logo_md.png');
    $('.logo-small').attr('src', '/images/customer/services/logo_sm.png');

    $('#blogmenu').attr('href', 'https://descuentosmedicos.segurosvango.com');
