extends ../../layout
block pageStyle
  link(rel='stylesheet', href='/stylesheets/customer/services/medical.css')
block pageContent
  section#medicalAssist
    .blank
    h2 asistencia médica
    .inner
      .button-group
        .list
          a(href='/services/medical/ambulance')
            img.button(src='/images/customer/services/medical/btn_medical_ambulance.png')
            span AMBULANCIA
          a(href='/services/medical/discount')
            span
              | DESCUENTOS
              br
              | MEDICOS
            img.button(src='/images/customer/services/medical/btn_medical_discount.png')
          a(href='/services/medical/consultancy')
            img.button(src='/images/customer/services/medical/btn_medical_consultancy.png')
            span
              | CONSULTORIA
              br
              | MEDICA
          a(href='/services/medical/query')
            span CONSULTA
            img.button(src='/images/customer/services/medical/btn_medical_query.png')
          a(href='/services/medical/reference')
            img.button(src='/images/customer/services/medical/btn_medical_reference.png')
            span
              | REFERENCIAS
              br
              | MEDICAS
    .bottom
      a.main-button(href='#')
        ¡Obtén cobertura ya!

block pageScript
  script.
    $('.navbar').addClass('top');
    $('.navbar .btn-consult').hide();
    $('.navbar .btn-social').show();
    $( window ).scroll(function() {
      var scroll = $(window).scrollTop();
      if(scroll < 10){
        $('.navbar .btn-consult').hide();
        $('.navbar .btn-social').show();
      }else{
        $('.navbar .btn-consult').show();
        $('.navbar .btn-social').hide();

      }
    });

    $('.nav-services').addClass('active');
    $('.logo-large').attr('src', '/images/customer/services/logo_lg.png');
    $('.logo-medium').attr('src', '/images/customer/services/logo_md.png');
    $('.logo-small').attr('src', '/images/customer/services/logo_sm.png');

    $('#blogmenu').attr('href', 'https://asistenciamedica.segurosvango.com');
