extends ../layout
block pageStyle
  link(rel='stylesheet', href='/stylesheets/customer/services.css')
block pageContent
  section.section1
    .blank
    .inner
      a(href='/services/travel' style='position: absolute; top: 9%; left: 30%;')
        img.button(src='/images/customer/services/btn_main_travelAssist.png')
      a(href='/services/roadside' style='position: absolute; top: 37%; left: 21%;')
        img.button(src='/images/customer/services/btn_main_roadsideAssist.png')
      a(href='/services/special' style='position: absolute; bottom: 25%; right: 9%;')
        img.button(src='/images/customer/services/btn_main_specialized.png')
      a(href='/services/legal' style='position: absolute; top: 31%; right: 8%;')
        img.button(src='/images/customer/services/btn_main_legalAssist.png')
      a(href='/services/medical' style='position: absolute; top: 6.7%; right: 18.5%;')
        img.button(src='/images/customer/services/btn_main_medicalAssist.png')
    .bottom
      a.main-button(href='#')
        ¡Obtén cobertura ya!
  
block pageScript
  script.
    $('.navbar').addClass('top');
    $('.navbar .btn-consult').hide();
    $('.navbar .btn-social').show();
    //- $('.section1').css('margin-top', '110px');
    //- $('.section1').css('padding-top', '110px');
    $( window ).scroll(function() {
      var scroll = $(window).scrollTop();
      if(scroll < 10){
        $('.navbar .btn-consult').hide();
        $('.navbar .btn-social').show();
      }else{
        $('.navbar .btn-consult').show();
        $('.navbar .btn-social').hide();

      }
    });

    $('.nav-services').addClass('active');
    $('.logo-large').attr('src', '/images/customer/services/logo_lg.png');
    $('.logo-medium').attr('src', '/images/customer/services/logo_md.png');
    $('.logo-small').attr('src', '/images/customer/services/logo_sm.png');

    $('#blogmenu').attr('href', 'https://asistencias.segurosvango.com');
