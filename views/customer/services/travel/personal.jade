block pageStyle
  link(rel='stylesheet', href='/stylesheets/customer/services/travel.css')
block pageContent
  section.section1
    .blank
    .inner
      .header
        h3
          | asistencia
          br
          | personal
        p CON EL AGENTE VIRTUAL VANGO PORDÁ REALIZAR CONSULTAS, ACLARACIONES, ASESORĹA TÉCNICA, INFORMACIÓN O SERVICIO DE EMERGENCIA, CON LA SEGURIDAD DE SER ATENDIDO DE MANERA RÁPIDA PRECISA Y OPORTUNA, EN CUALQUIER HORA DEL DÍA,DURANTE TODO EL AÑO.
    .bottom
      a.main-button(href='#')
        ¡Obtén cobertura ya!

block pageScript
  script.
    $('.navbar').addClass('top');
    $('.navbar .btn-consult').hide();
    $('.navbar .btn-social').show();
    $( window ).scroll(function() {
      var scroll = $(window).scrollTop();
      if(scroll < 10){
        $('.navbar .btn-consult').hide();
        $('.navbar .btn-social').show();
      }else{
        $('.navbar .btn-consult').show();
        $('.navbar .btn-social').hide();

      }
    });

    $('.nav-services').addClass('active');
    $('.logo-large').attr('src', '/images/customer/services/logo_lg.png');
    $('.logo-medium').attr('src', '/images/customer/services/logo_md.png');
    $('.logo-small').attr('src', '/images/customer/services/logo_sm.png');

    $('#blogmenu').attr('href', 'https://asistenciapersonal.segurosvango.com');
