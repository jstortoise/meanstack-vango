extends ../../layout
block pageStyle
  link(rel='stylesheet', href='/stylesheets/customer/services/travel.css')
block pageContent
  a.back-btn(href='/services/travel') BACK
  section.section1
    .blank
    .inner
      .header
        .header-back
          h3
            | asistencia
            br
            | personal
          .comment
            p La comodidad que te brinda tu asistente personal Vango! te permite ahorrar tiempo y esfuerzo, obtén información técnica de la App, asistencia telefónica, asesoría en servicios ejecutivos, renta de oficinas equipadas, salones para eventos y por si fuera poco te ofrece el servicio de reservaciones.
    .bottom
      a.main-button(href='#')
        ¡Obtén cobertura ya!

block pageScript
  script.
    $('.navbar').addClass('top');
    $('.navbar .btn-consult').hide();
    $('.navbar .btn-social').show();
    $( window ).scroll(function() {
      var scroll = $(window).scrollTop();
      if(scroll < 10){
        $('.navbar .btn-consult').hide();
        $('.navbar .btn-social').show();
      }else{
        $('.navbar .btn-consult').show();
        $('.navbar .btn-social').hide();

      }
    });

    $('.nav-services').addClass('active');
    $('.logo-large').attr('src', '/images/customer/services/logo_lg.png');
    $('.logo-medium').attr('src', '/images/customer/services/logo_md.png');
    $('.logo-small').attr('src', '/images/customer/services/logo_sm.png');

    $('#blogmenu').attr('href', 'https://asistenciapersonal.segurosvango.com');
