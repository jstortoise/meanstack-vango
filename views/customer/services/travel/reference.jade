extends ../../layout
block pageStyle
  link(rel='stylesheet', href='/stylesheets/customer/services/travel.css')
block pageContent
  a.back-btn(href='/services/travel') BACK
  section.section6
    .blank
    .inner
      .header
        .header-back
          h3
            | referencias
            br
            | en viaje nac.
          .comment
            p Vango! Te guía de manera eficiente y segura; se anticipa a tus necesidades. Vango! te da todas las referencias previas del lugar que visitarás, como festividades, eventos culturales, deportivos, conciertos entre otros. Vive la experiencia de lo práctico que te será viajar con Vango!
    .bottom
      a.main-button(href='#')
        ¡Obtén cobertura ya!

block pageScript
  script.
    $('.navbar').addClass('top');
    $('.navbar .btn-consult').hide();
    $('.navbar .btn-social').show();
    $( window ).scroll(function() {
      var scroll = $(window).scrollTop();
      if(scroll < 10){
        $('.navbar .btn-consult').hide();
        $('.navbar .btn-social').show();
      }else{
        $('.navbar .btn-consult').show();
        $('.navbar .btn-social').hide();

      }
    });

    $('.nav-services').addClass('active');
    $('.logo-large').attr('src', '/images/customer/services/logo_lg.png');
    $('.logo-medium').attr('src', '/images/customer/services/logo_md.png');
    $('.logo-small').attr('src', '/images/customer/services/logo_sm.png');

    $('#blogmenu').attr('href', 'https://referenciaenviajes.segurosvango.com');
