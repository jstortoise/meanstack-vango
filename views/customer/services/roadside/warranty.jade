extends ../../layout
block pageStyle
  link(rel='stylesheet', href='/stylesheets/customer/services/roadside.css')
block pageContent
  section.section7
    .blank
    .inner
      .header
        h3
          | Garantía
          br
          | Ilimitada llantas
        p Cobertura ilimitada contra daño de llantas / Solo Vango Insurance Trust tiene la mejor cobertura de confianza, con la tecnología de Inteligente Artificia, fácil de usar, que garantiza de manera rápida hasta 27 asistencias intensamente útiles
    .bottom
      a.main-button(href='#')
        ¡Obtén cobertura ya!

block pageScript
  script.
    $('.navbar').addClass('top');
    $('.navbar .btn-consult').hide();
    $('.navbar .btn-social').show();
    $( window ).scroll(function() {
      var scroll = $(window).scrollTop();
      if(scroll < 10){
        $('.navbar .btn-consult').hide();
        $('.navbar .btn-social').show();
      }else{
        $('.navbar .btn-consult').show();
        $('.navbar .btn-social').hide();

      }
    });

    $('.nav-services').addClass('active');
    $('.logo-large').attr('src', '/images/customer/services/logo_lg.png');
    $('.logo-medium').attr('src', '/images/customer/services/logo_md.png');
    $('.logo-small').attr('src', '/images/customer/services/logo_sm.png');

    $('#blogmenu').attr('href', 'https://llantas.segurosvango.com');
