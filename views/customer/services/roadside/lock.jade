extends ../../layout
block pageStyle
  link(rel='stylesheet', href='/stylesheets/customer/services/roadside.css')
block pageContent
  a.back-btn(href='/services/roadside') BACK
  section.section4
    .blank
    .inner
      .header
        .header-back
          h3
            | cerrajería
            br
            | auto
          .comment
            p ¿Olvidaste la llave? Obtén tu membresía Vango! Da un touch a la App en el ícono de cerrajería. En tiempo real, un profesional llegará a tu auxilio.
      .mobile-comment
        p ¿Olvidaste la llave? Obtén tu membresía Vango! Da un touch a la App en el ícono de cerrajería. En tiempo real, un profesional llegará a tu auxilio.
    .bottom
      a.main-button(href='#')
        ¡Obtén cobertura ya!

block pageScript
  script.
    $('.navbar').addClass('top');
    $('.navbar .btn-consult').hide();
    $('.navbar .btn-social').show();
    $( window ).scroll(function() {
      var scroll = $(window).scrollTop();
      if(scroll < 10){
        $('.navbar .btn-consult').hide();
        $('.navbar .btn-social').show();
      }else{
        $('.navbar .btn-consult').show();
        $('.navbar .btn-social').hide();

      }
    });

    $('.nav-services').addClass('active');
    $('.logo-large').attr('src', '/images/customer/services/logo_lg.png');
    $('.logo-medium').attr('src', '/images/customer/services/logo_md.png');
    $('.logo-small').attr('src', '/images/customer/services/logo_sm.png');

    $('#blogmenu').attr('href', 'https://cerrajeriacancun.segurosvango.com/');
