extends ../../layout
block pageStyle
  link(rel='stylesheet', href='/stylesheets/customer/services/special.css')
block pageContent
  section#specialized
    .blank
    h2 especializados
    .inner
      .button-group
        .list
          a(href='/services/special/vehicle')
            img.button(src='/images/customer/services/special/btn_special_vehicle.png')
          a(href='/services/special/admin')
            img.button(src='/images/customer/services/special/btn_special_admin.png')
          a(href='/services/special/message')
            img.button(src='/images/customer/services/special/btn_special_message.png')
        .list
          a(href='/services/special/car')
            img.button(src='/images/customer/services/special/btn_special_car.png')
        .list
          a(href='#')
            img.button.large(src='/images/customer/services/special/btn_special_pro.png')
    .bottom
      a.main-button(href='#')
        ¡Obtén cobertura ya!

block pageScript
  script.
    $('.navbar').addClass('top');
    $('.navbar .btn-consult').hide();
    $('.navbar .btn-social').show();
    $( window ).scroll(function() {
      var scroll = $(window).scrollTop();
      if(scroll < 10){
        $('.navbar .btn-consult').hide();
        $('.navbar .btn-social').show();
      }else{
        $('.navbar .btn-consult').show();
        $('.navbar .btn-social').hide();

      }
    });

    $('.nav-services').addClass('active');
    $('.logo-large').attr('src', '/images/customer/services/logo_lg.png');
    $('.logo-medium').attr('src', '/images/customer/services/logo_md.png');
    $('.logo-small').attr('src', '/images/customer/services/logo_sm.png');

    $('#blogmenu').attr('href', 'https://especializado.segurosvango.com');
