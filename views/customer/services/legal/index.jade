extends ../../layout
block pageStyle
  link(rel='stylesheet', href='/stylesheets/customer/services/legal.css')
block pageContent
  a.back-btn(href='/services') BACK
  section#legalAssist
    .blank
    h2 asistencia legal
    .inner
      .button-group
        .list
          a(href='/services/legal/telephone')
            img.button(src='/images/customer/services/legal/btn_legal_telephone.png')
          a(href='/services/legal/legal')
            img.button(src='/images/customer/services/legal/btn_legal_legal.png')
          a(href='/services/legal/breakdown')
            img.button(src='/images/customer/services/legal/btn_legal_breakdown.png')
        .list
          a(href='#')
            img.button.large(src='/images/customer/services/legal/btn_legal_blank.png')
    .bottom
      a.main-button(href='#')
        ¡Obtén cobertura ya!
  
block pageScript
  script.
    $('.navbar').addClass('top');
    $('.navbar .btn-consult').hide();
    $('.navbar .btn-social').show();
    $( window ).scroll(function() {
      var scroll = $(window).scrollTop();
      if(scroll < 10){
        $('.navbar .btn-consult').hide();
        $('.navbar .btn-social').show();
      }else{
        $('.navbar .btn-consult').show();
        $('.navbar .btn-social').hide();

      }
    });

    $('.nav-services').addClass('active');
    $('.logo-large').attr('src', '/images/customer/services/logo_lg.png');
    $('.logo-medium').attr('src', '/images/customer/services/logo_md.png');
    $('.logo-small').attr('src', '/images/customer/services/logo_sm.png');

    $('#blogmenu').attr('href', 'https://asistencialegal.segurosvango.com');
