extends ../../layout
block pageStyle
  link(rel='stylesheet', href='/stylesheets/customer/services/legal.css')
block pageContent
  a.back-btn(href='/services/legal') BACK
  section.section2
    .blank
    .inner
      .header
        .header-back
          h3
            | ASESORÍA
            br
            | TELÉFONICA
          .comment
            p ¿Te urge la opinión de un Abogado? ¡Activa, pregunta y escucha! En diferentes áreas de derecho contamos con el mejor equipo de expertos profesionales.
      .mobile-comment
        p ¿Te urge la opinión de un Abogado? ¡Activa, pregunta y escucha! En diferentes áreas de derecho contamos con el mejor equipo de expertos profesionales.
    .bottom
      a.main-button(href='#')
        ¡Obtén cobertura ya!

block pageScript
  script.
    $('.navbar').addClass('top');
    $('.navbar .btn-consult').hide();
    $('.navbar .btn-social').show();
    $( window ).scroll(function() {
      var scroll = $(window).scrollTop();
      if(scroll < 10){
        $('.navbar .btn-consult').hide();
        $('.navbar .btn-social').show();
      }else{
        $('.navbar .btn-consult').show();
        $('.navbar .btn-social').hide();

      }
    });

    $('.nav-services').addClass('active');
    $('.logo-large').attr('src', '/images/customer/services/logo_lg.png');
    $('.logo-medium').attr('src', '/images/customer/services/logo_md.png');
    $('.logo-small').attr('src', '/images/customer/services/logo_sm.png');

    $('#blogmenu').attr('href', 'https://asesoriatelefonica.segurosvango.com');
