extends ../layout
block stylesheet
  link(rel='stylesheet', href='/stylesheets/super-admin/admin.css')
  link(rel='stylesheet', href='/stylesheets/super-admin/supplier/external.css')
block content
  .content__inner.content__inner--sm
    header.content__title
      .actions
        a(href="/admin/supplier/external_list", class="actions__item zmdi zmdi-long-arrow-return zmdi-hc-fw")
        .dropdown.actions__item        
          i.zmdi.zmdi-more-vert(data-toggle='dropdown')
          .dropdown-menu.dropdown-menu-right
            a.dropdown-item(href='/admin/supplier/external/delete/#{_id}') Delete
            a.dropdown-item(href='') Edit
    .card.profile
      .profile__img
        img(src='/uploads/supplier/profile/#{ profile.profileimagename || "empty.jpg" }', alt='')
      .profile__info
        h3
          | #{profile.firstname + ' ' + profile.lastname}
        ul.icon-list
          li
            i.zmdi.zmdi-phone
            |  #{profile.phone1}
          li
            i.zmdi.zmdi-email
            |  #{profile.email}
    .toolbar
      nav.toolbar__nav
        a.active About
        a(href='/admin/supplier/external/profile/#{ _id }/document') Document
        a(href='/admin/supplier/external/profile/#{ _id }/location') Service Area
        a(href='/admin/supplier/external/#{ _id }/portal') Portal
        a(href='/admin/supplier/external/profile/#{ _id }/workdiary') History
    .card
      .card-body
        .row          
          .col-md-6
            .form-group
              label First Name
              input.stage_1_supplier_first_name.form-control(type='text', value='#{profile.firstname}', disabled='')
              i.form-group__bar
          .col-md-6
            .form-group
              label Last Name
              input.stage_1_supplier_last_name.form-control(type='text', value='#{profile.lastname}', disabled='')
              i.form-group__bar
          .col-md-6
            .form-group
              label Company(Optional)
              input.stage_1_supplier_company_name.form-control(type='text', value='#{profile.companyname}', disabled='')
              i.form-group__bar
          .col-md-6
            .form-group
              label Email Address
              input.stage_1_supplier_email.form-control(type='text', value='#{profile.email}', disabled='')
              i.form-group__bar
          .col-md-6
            .form-group
              label Phone Number 1
              input.stage_1_supplier_phone_1.form-control(type='text', value='#{profile.phone1}', disabled='')
              i.form-group__bar
          .col-md-6
            .form-group
              label Phone Number 2(Optional)
              input.stage_1_supplier_phone_2.form-control(type='text', value='#{profile.phone2}', disabled='')
              i.form-group__bar
        .form-group
          label Address(Optional)
          textarea.stage_1_supplier_address.form-control.textarea-autosize(value='#{profile.note}', disabled='')
          i.form-group__bar        
        .clearfix

block script
  script(src='/admin-template/vendors/bower_components/autosize/dist/autosize.min.js')  
  script.
    $(document).ready(function(){      
      $('.navigation_supplier_nav').addClass('navigation__active');
      $('.navigation_supplier_external').addClass('navigation__active');
      $('.navigation_supplier_nav > a').click();
    })
    